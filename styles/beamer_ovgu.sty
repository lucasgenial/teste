\newenvironment{withoutheadline}{%
	\setbeamercolor{background canvas}{bg=white}
	\setbeamertemplate{headline}{%
		\begin{minipage}[c][0.9cm]{\paperwidth}
			\begin{minipage}{0.2\paperwidth}
				\centering
				\includegraphics[width=0.19\paperwidth]{OVGU_SIGN_druck.pdf}
			\end{minipage}
		\end{minipage}
		\color{ovgu}\rule{\paperwidth}{1pt} 
	}
	\setbeamertemplate{footline}{%
		\colorbox{ovgu}{\begin{minipage}[c][0.4cm]{\textwidth}%
			\hfill
		\end{minipage}\hspace{-6pt}}
	}
}{}

